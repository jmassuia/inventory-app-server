// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mysql"
  url      = env("DB_ENVIRONMENT_PROD")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  CNPJ     String    @unique
  role     String    @default("user")
  active   Boolean   @default(true)
  products Product[]
  stock    Stock[]
  suppliers Suppliers[]

  @@map("clients")
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String
  desc     String
  price    Float
  quantity Int
  client   Client @relation(fields: [clientId], references: [id])
  clientId Int
  stock    Stock  @relation(fields: [stockId], references: [id])
  stockId  Int

  @@map("products")
}

model Stock {
  id       Int       @id @default(autoincrement())
  name     String
  client   Client    @relation(fields: [clientId], references: [id])
  clientId Int
  products Product[]
  cep      String

  @@map("stocks")
}

model Suppliers {
  id        Int    @id @default(autoincrement())
  name      String
  uf        String
  city      String
  address   String
  cnpj      String
  phone     String
  client    Client @relation(fields:[clientId], references:[id])
  clientId  Int

  @@map("suppliers")
}